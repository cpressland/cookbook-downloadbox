[global]
   workgroup = WORKGROUP
   server string = Download Box
   security = user
   map to guest = Bad User
   log file = /var/log/samba/%m.log
   max log size = 50
   dns proxy = no
   guest account = apps
   load printers = no
   printing = bsd
   printcap name = /dev/null
   disable spoolss = yes

[downloads]
   path = <%= node['downloadbox']['basedir_downloads'] %>
   public = yes
   only guest = yes
   writable = yes

[config]
  path = <%= node['downloadbox']['basedir_downloads'] %>
  public = yes
  only guest = yes
  writable = yes
